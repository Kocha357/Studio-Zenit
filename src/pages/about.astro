---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import ContactForm from "../components/Contact-form.astro";
import Image from "../components/Image.astro";
const images = [
	{
		imgUrl: "/about-section/Anja_013.png",
		alt: "Fotografija sa Anjinog punoletstva",
	},
	{
		imgUrl: "/about-section/BojanaMarko_1095.png",
		alt: "Fotografija sa venčanja Bojane i Marka",
	},
	{
		imgUrl: "/about-section/BojanaMarko_1447.png",
		alt: "Fotografija Bojane i Marka sa venčanja",
	},
	{
		imgUrl: "/about-section/IvanaLazar_0139.png",
		alt: "Fotografija Ivana i Lazar",
	},
	{
		imgUrl: "/about-section/Teodora_0063.png",
		alt: "Slika Teodore sa punoletstva",
	},
	{
		imgUrl: "/about-section/Teodora_0387.png",
		alt: "Teodorina fotografija sa punoletstva",
	},
	{
		imgUrl: "/about-section/Aleksandra_0204.png",
		alt: "Aleksandrin portret-fotografija",
	},
	
];
---

<Layout title="O nama | Foto studio Zenit" description="Astro descriptio" keywords="Astro keywords">
	<Navigation />
	<div class="content-wrapper">
		<h2>O nama</h2>

		<p>
			Dobrodošli u Studio Zenit - vaša fotografska radnja za besprekorne uspomene u Bajinoj Bašti!<br /> Naš osnivač Lazar Vasiljević, sa više
			od <span class="colored">13 godina iskustva u fotografiji</span>, stvorio je oazu kreativnosti i strasti gde svaki trenutak postaje
			nezaboravan.<br /> Vrhunski foto i video studio - Studio Zenit, prepoznat ranije kao Laki foto, <span class="colored"
				>osnovan je 2022.godine</span
			>. Sa <span class="colored">više od 130 uspešnih pokrivenih svečanosti</span> u poslednje dve godine, naša reputacija govori sama za sebe.<br
			/> Zadovoljstvo naših klijenata je ključno, a njihovih 130 preporuka svedoče o našoj posvećenosti pružanju vrhunskih usluga.<br /> Naš
			cilj je jednostavan - pružiti vam ne samo fotografije, već iskustvo koje će izvući najlepše trenutke iz svakog okvira.<br /> Studio Zenit
			se ponosi timom od <span class="colored">tri iskusna fotografa, dva vrhunska videografa, vozačem drona i pet pomagača</span> koji su tu
			da obezbede da svako veselje bude savršeno zabeleženo.<br /> Locirani u prelepom okruženju Bajine Bašte, mi smo vaši lokalni stručnjaci
			za fotografiju i video produkciju.<br /> Naša posvećenost kvalitetu i pažljiv pristup svakom projektu čini nas prvoklasnim izborom za sve
			vaše posebne trenutke.<br /> Započnite putovanje kroz vreme i emocije sa Foto Studio Zenit.<br /> Naš stručni tim čeka da vaše uspomene
			pretvori u umetnost.<br /> Kontaktirajte nas i dozvolite nam da zajedno stvorimo najlepše fotografije i snimke.<br /> Studio Zenit - vaša
			adresa za nezaboravne trenutke!
		</p>
	</div>
	<h2>NAŠ TIM</h2>
	<div class="photos">
		{
			images.map((img) => {
				return <Image imgUrl={img.imgUrl} imgAlt={img.alt} width="250px" height="auto" />;
			})
		}
	</div>
	<ContactForm />
	<Footer />
</Layout>
<style>
	.photos {
		display: flex;
		min-width: 100%;
		align-items: center;
		overflow: auto;
		padding: 20px;
		gap: 20px;
		margin: 20px 0;
	}
	@media screen and (max-width: 1280px) {
		.photos {
			scrollbar-width: none;
		}

		.photos::-webkit-scrollbar {
			display: none;
		}
	}
	.content-wrapper {
		margin-top: 100px;
		margin-bottom: 40px;
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		padding: 20px;
		font-weight: 600;
		color: rgb(255 255 255 /80%);
		background-image: url("/main-galery-section/about-bg.png");
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;
		background-attachment: fixed;
		position: relative;
	}
	@media screen and (max-width: 1280px) {
		.content-wrapper {
			margin-bottom: 0;
		}
	}
	.content-wrapper::before {
		content: "";
		position: absolute;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
		background: #000000bc;
	}

	h2 {
		color: #d9ad5e;
		text-transform: uppercase;
		text-align: center;
		position: relative;
	}
	
	p {
		width: 100%;
		max-width: 1280px;
		position: relative;
	}
	.colored {
		color: #d9ad5e;
	}
</style>
