---
interface Props {
  title: string;
  body: string;
  imgUrl: string;
  imgAlt: string;
}

const { imgUrl, title, body, imgAlt } = Astro.props;
---

<div class="link-card">
  <div class="title-wrapp">
    <img src={imgUrl} alt={imgAlt} />

    <h3>
      {title}
    </h3>
  </div>

  <p>
    <q><i>{body}</i></q>
  </p>
</div>
<style>
  .link-card {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
  }
  .title-wrapp {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    gap: 10px;
    color: rgb(255 255 255 /80%);
  }
  .title-wrapp img {
    width: 200px;
    height: auto;
  }
  p {
    color: rgb(255 255 255 /80%);
    text-align: center;
    padding: 0 20px;
  }
</style>
