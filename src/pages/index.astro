<style>
	.content-wrapper {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		padding: 40px;
		position: relative;
		background-image: url("/main-galery-section/info-bg.png");
		background-repeat: no-repeat;
		background-size: cover;
		background-position: center;
		background-attachment: fixed;
	}
	h2 {
		color: #d9ad5e;
		padding-bottom: 20px;
		text-transform: uppercase;
		position: relative;
		z-index: 3;
	}
	@media screen and (max-width: 1280px) {
		.content-wrapper {
			padding: 20px;
		}
	}
	.card-wrapper {
		display: grid;
		width: 100%;
		max-width: 1280px;
		grid-template-columns: repeat(4, 1fr);
		grid-gap: 5px;
		place-items: center;
		align-items: baseline;
		position: relative;
		z-index: 3;
	}
	.content-wrapper:before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-color: #000000ca;
	}
	@media screen and (max-width: 577px) {
		.card-wrapper {
			grid-template-columns: 1fr;
			gap: 15px;
		}
	}
	@media screen and (min-width: 577px) and (max-width: 1030px) {
		.card-wrapper {
			grid-template-columns: repeat(2, 1fr);
		}
	}
	.card {
		display: flex;
		justify-content: space-evenly;
		align-items: center;
		flex-direction: column;
		grid-column: span 1;
	}
	.card p {
		color: rgb(255 255 255 /80%);
		font-weight: 600;
		text-align: center;

		padding: 10px;
	}
	.contact-title {
		width: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		margin-top: 40px;
		margin-bottom: 0;
	}
	.content-wrapper > p {
		color: rgb(255 255 255 /80%);
		position: relative;
		padding: 10px 0;
		border-top: 1px solid #d9ad5e;
		border-bottom: 1px solid #d9ad5e;
		margin-top: 20px;
	}
	p a {
		text-decoration: none;
		color: #d9ad5e;
	}
</style>
