<style>
	.slider-wrapper {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		width: 100%;
		background-color: inherit;
		background-image: url("/main-galery-section/comments-bg.png");
		background-repeat: no-repeat;
		background-size: cover;
		background-attachment: fixed;
		background-position: center;
		position: relative;
	}
	.slider-wrapper::before {
		content: "";
		position: absolute;
		top: -1px;
		left: 0;
		right: 0;
		bottom: -1px;
		background-color: #000000ca;
	}
	h2 {
		color: #d9ad5e;
		text-align: center;
		padding: 20px 20px 0 20px;
		position: relative;
	}
	.slide-wrapp {
		display: flex;
		justify-content: center;
		align-items: center;
		width: 100%;
		max-width: 1280px;
		position: relative;
		margin: auto;
		padding: 20px 0;
	}

	.slide {
		display: none;
		width: 100%;
		max-width: 500px;
		padding: 0 40px;
	}

	#prev,
	#next {
		cursor: pointer;
		position: absolute;
		top: 40%;
		width: 40px;
		height: 40px;
		margin-top: -22px;
		color: white;
		font-weight: bold;
		font-size: 20px;
		transition: 0.6s ease;
		user-select: none;
		border-radius: 100%;
		background: #d9ad5e;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	#next {
		right: 10px;
	}
	#prev {
		left: 10px;
	}

	.fade {
		animation-name: fade;
		animation-duration: 1.5s;
	}

	@keyframes fade {
		from {
			opacity: 0.4;
		}
		to {
			opacity: 1;
		}
	}
</style>
<script>
	let slideIndex: number = 1;
	let t: any;

	showSlides(slideIndex);

	function plusSlides(n: number) {
		slideIndex = slideIndex + n;
		clearTimeout(t);
		showSlides(slideIndex);
	}

	const prevBtn: any = document.getElementById("prev");
	const nextBtn: any = document.getElementById("next");
	prevBtn.onclick = () => {
		plusSlides(-1);
	};
	nextBtn.onclick = () => {
		plusSlides(1);
	};

	function showSlides(n: number) {
		let i;
		let slides: any = document.getElementsByClassName("slide");

		if (n == undefined) {
			n = ++slideIndex;
		}

		if (n > slides.length) {
			slideIndex = 1;
		}

		if (n < 1) {
			slideIndex = slides.length;
		}

		for (i = 0; i < slides.length; i++) {
			slides[i].style.display = "none";
		}

		slides[slideIndex - 1].style.display = "block";
		t = setTimeout(showSlides, 10000);
	}
</script>
