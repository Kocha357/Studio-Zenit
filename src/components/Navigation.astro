	</div>
</nav>
<style>
	nav {
		height: 100px;
		display: flex;
		justify-content: flex-end;
		align-items: center;
		width: 100%;
		position: fixed;
		top: 0;
		z-index: 99999;
	}
	.hamburger {
		width: 50px;
		height: 100%;
		padding: 5px 20px;
		display: none;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		gap: 10px;
	}
	.hamburger div {
		width: 100%;
		height: 5px;
		background-color: #d9ad5e;
	}
	#side-menu {
		position: fixed;
		top: 0;
		right: -100%;
		bottom: 0;
		height: 100vh;
		z-index: 99999;
		background: linear-gradient(to bottom, #121315, #000000 50%, #121315 100%);
		display: none;
		align-items: center;
		flex-direction: column;
		width: 80%;
		overflow: hidden;
	}
	@media screen and (max-width: 1280px) {
		#side-menu {
			display: flex;
		}
		.hamburger {
			display: flex;
		}
	}
	.logo-aside {
		width: 400px;
		position: absolute;
		bottom: -100px;
	}
	#close {
		transform: rotate(45deg);
		color: rgb(255 255 255 / 58%);
		font-size: 50px;
		position: absolute;
		top: 10px;
		right: 10px;
		border-radius: 100%;
		border: 1px solid #d9ad5e;
		width: 50px;
		height: 50px;
		display: flex;
		justify-content: center;
		align-items: center;
		font-family: sans-serif;
	}
	.show-aside {
		right: 0 !important;
		transition: right 0.5s ease-out;
	}
	#logo {
		width: 110px;
		position: absolute;
		left: 20px;
		display: none;
	}
	@media screen and (max-width: 1280px) {
		#logo {
			left: -6px;
		}
	}
	.show-img {
		display: block !important;
		transition: display 0.5s ease-out;
	}
	.scrolled {
		background: linear-gradient(to left, #000000, #000000 30%, #121315 100%);
		height: 60px;
		transition: background-color 1s ease-out;
		transition: height 0.5s ease-out;
	}
	.links-wrapper {
		padding: 0 40px;
		display: flex;
		gap: 40px;
	}
	@media screen and (max-width: 1280px) {
		.links-wrapper {
			padding: 0 20px;
			display: none;
		}
	}
	.links-wrapper a {
		text-decoration: none;
		outline: none;
		color: rgb(255 255 255 / 58%);
		font-size: 20px;
		text-transform: uppercase;
		cursor: pointer;
		word-break: keep-all;
		white-space: nowrap;
	}
	#side-menu a {
		text-decoration: none;
		outline: none;
		color: rgb(255 255 255 / 58%);
		font-size: 20px;
		text-transform: uppercase;
		cursor: pointer;
		word-break: keep-all;
		white-space: nowrap;
		margin-top: 20px;
	}
	#from-top {
		margin-top: 50px !important;
	}
	.links-wrapper a:hover {
		color: #d9ad5e;
	}
	#side-menu a.active {
		color: #d9ad5e;
	}
	.links-wrapper a.active {
		color: #d9ad5e;
	}
</style>
<script>
	window.onscroll = () => {
		let navbar: any = document.getElementById("navbar");

		let navBarLogo: any = document.getElementById("logo");
		if (window.scrollY > 0) {
			navbar.classList.add("scrolled");
			navBarLogo.classList.add("show-img");
		} else {
			navbar.classList.remove("scrolled");
			navBarLogo.classList.remove("show-img");
		}
	};

	document.addEventListener("DOMContentLoaded", () => {
		let currentPage = window.location.pathname;
		console.log(currentPage);
		let navLinks = document.querySelectorAll("#side-menu a");
		let navLinksDesktop = document.querySelectorAll(".links-wrapper a");
		console.log(navLinks);
		navLinks.forEach((link) => {
			if (link.getAttribute("href") === currentPage) {
				link.classList.add("active");
			} else {
				link.classList.remove("active");
			}
		});
		navLinksDesktop.forEach((link) => {
			if (link.getAttribute("href") === currentPage) {
				link.classList.add("active");
			} else {
				link.classList.remove("active");
			}
		});
	});

	const hamburger: any = document.getElementById("hamburger");
	const closeBtn: any = document.getElementById("close");
	const aside: any = document.getElementById("side-menu");
	hamburger.addEventListener("click", () => {
		aside.classList.add("show-aside");
		document.body.classList.add("disable-scroll");
	});
	closeBtn.addEventListener("click", () => {
		aside.classList.remove("show-aside");
		document.body.classList.remove("disable-scroll");
	});
</script>
